# Maintaoner: Yamada Hayao <development@fascode.net>

reponame="dmc"
pkgname="${reponame}-git"
pkgver=r15.cb28c6d
pkgrel=1
pkgdesc="An all-in-one tool for configuring major display managers"
arch=('any')
url="https://github.com/FascodeNet/dmc"
license=('SUSHI-WARE')
depends=('bash' "vi" "util-linux" "crudini")
makedepends=('git')
source=("git+https://github.com/FascodeNet/dmc.git")
md5sums=('SKIP')
provides=("dmc")
conflicts=("dmc")

pkgver() {
  cd "${reponame}"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
    install -m 755 -D "${srcdir}/dmc/src/dmc/dmc" "${pkgdir}/usr/bin/dmc"
  
    install -m 755 -D "${srcdir}/dmc/src/rdm/rdm" "${pkgdir}/usr/bin/rdm"
    install -m 644 -D "${srcdir}/dmc/src/rdm/rdm.conf" "${pkgdir}/etc/rdm.con"
    install -m 644 -D "${srcdir}/dmc/src/rdm/rdm.service" "${pkgdir}/usr/lib/systemd/system/rdm.service"


    install -m 644 -D "${srcdir}/dmc/LICENSE.md" "${pkgdir}/usr/share/licenses/dmc/LICENSE.md"
}
